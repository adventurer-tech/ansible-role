---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: adventurer
  annotations:
    kubernetes.io/ingress.class: traefik
    cert-manager.io/cluster-issuer: "{{ cert_issuer }}"
spec:
  rules:
    - host: tower.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: tower
                port:
                  number: 80
    - host: hall.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: hall
                port:
                  number: 80
    - host: bank.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: bank
                port:
                  number: 80
    - host: kanban.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /v0
            backend:
              service:
                name: kanban
                port:
                  number: 80
    - host: finance.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /v0
            backend:
              service:
                name: finance
                port:
                  number: 80
    - host: club.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /v0
            backend:
              service:
                name: club
                port:
                  number: 80
    - host: github.{{ domain }}
      http:
        paths:
          - pathType: Prefix
            path: /v0
            backend:
              service:
                name: github
                port:
                  number: 80
  tls:
    - secretName: "{{ domain }}"
      hosts:
        - "*.{{ domain }}"
