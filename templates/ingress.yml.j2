---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: "{{ ingress_name }}"
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: "{{ cert_issuer }}"
    nginx.ingress.kubernetes.io/force-ssl-redirect: "false"
spec:
  rules:
    - host: tower.{{ domain }}
      http:
        paths:
          - path: /
            backend:
              serviceName: tower
              servicePort: 80
    - host: hall.{{ domain }}
      http:
        paths:
          - path: /
            backend:
              serviceName: hall
              servicePort: 80
    - host: bank.{{ domain }}
      http:
        paths:
          - path: /
            backend:
              serviceName: bank
              servicePort: 80
    - host: kanban.{{ domain }}
      http:
        paths:
          - path: /v0
            backend:
              serviceName: kanban
              servicePort: 80
    - host: finance.{{ domain }}
      http:
        paths:
          - path: /v0
            backend:
              serviceName: finance
              servicePort: 80
    - host: club.{{ domain }}
      http:
        paths:
          - path: /v0
            backend:
              serviceName: club
              servicePort: 80
    - host: github.{{ domain }}
      http:
        paths:
          - path: /v0
            backend:
              serviceName: github
              servicePort: 80
  tls:
    - hosts:
        - "{{ domain }}"
        - "*.{{ domain }}"
      secretName: "{{ domain }}"
